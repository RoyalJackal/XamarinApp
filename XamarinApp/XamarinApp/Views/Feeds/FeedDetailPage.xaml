<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinApp.Views.Feeds.FeedDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Корм:" FontSize="Medium" />
        <Label Text="{Binding FodderName}" FontSize="Small"/>
        <Label Text="Время кормления:" FontSize="Medium" />
        <Label Text="{Binding Time}" FontSize="Small"/>
        <Label Text="Количество корма(г.):" FontSize="Medium" />
        <Label Text="{Binding Amount}" FontSize="Small"/>
        <Button Text="Редактировать" Command="{Binding EditCommand}" HorizontalOptions="FillAndExpand"></Button>
    </StackLayout>

</ContentPage>